/* pages/book/book.wxss */

/* head */
.head{
    width: 100%;
}


.manu-label {
    position: relative;
    margin: auto;
    /* margin-bottom: 20rpx; */
    width: 100%;
    height: 300rpx;
    line-height: 300rpx;
    text-align: center;
    background-size: 100%;
    background-position: center;
    /* background-attachment: fixed; */
    /* border-radius: 22rpx; */

    color: #fff;
    font-size: 70rpx;
    font-weight: 450;
    text-shadow: #777 0rpx 0rpx 30rpx;
    font-family: YouYuan;
    letter-spacing: 10rpx;
}

.label {
    background-color: rgba(255, 255, 255, 0.2);
}
.scroll-block{
    height: 50rpx;
    padding: 6rpx 10rpx 4rpx;
    background-color: #eee;
}
.scroll-item{
    display: inline-block;
    padding: 0 50rpx 0;
    margin-right: 10rpx;
    min-width: 100rpx;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    font-size: 22rpx;
    border-radius: 20rpx;
    background-color: rgba(188, 217, 253, 0.8);
}

/* 视图 */
.defaultArea {
    background-color: #eee;
    overflow: hidden;
}

.movableOne {
    width: calc(100% - 120rpx);
    height: calc(100% - 160rpx);
    padding: 80rpx 60rpx;

}
.seatArea{
    position: relative;
    z-index: 0;
}

.seatTap{
    position: absolute;
}
.normal {
    position: relative;
    margin: auto;
    margin-left: 10%;
    text-align: center;
    width: 80%;
    
    /* height: 100%;  */
  }



