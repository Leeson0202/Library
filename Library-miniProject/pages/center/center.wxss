/* pages/center/center.wxss */
#background-image-view {
    height: 270rpx;
    overflow: hidden;
    z-index: 5;
}

#background-image {
    width: 100%;
    z-index: 6;
    filter: blur(3rpx);
    /* backdrop-filter: blur(2px); */
}

.contents {
    margin: auto;
    height: 200rpx;
    padding: 15rpx 15rpx 15rpx;
    width: calc(90% - 30rpx);
    /* height: 100px; */
    background-color: #fff;
    border-radius: 10rpx;
    box-shadow: 0 10rpx 10rpx #eee;
    z-index: 100;
}

.avater-block-main {
    position: relative;
    height: 150rpx;
    overflow: hidden;
    top: -60rpx;
    left: 40rpx;

}

.avater-block {
    background-color: #f7f7f7;
    display: inline-block;
    width: 140rpx;
    height: 140rpx;
    border-radius: 10rpx;
    box-shadow: 0 0 1rpx #fff;

}

.avatar-image {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}

.user-name-block {
    display: inline-block;
    position: relative;
    top: -38rpx;
    margin-left: 30rpx;
    width: calc(750rpx - 380rpx);
}

.user-name-block text {
    display: inline-block;

}

.user-name-image {
    display: inline-block;
    position: relative;
    top: 6rpx;
    margin-left: 14rpx;
    width: 36rpx;
    height: 36rpx;
}

.user-info {
    position: relative;
    top: -50rpx;
    width: 100%;
    height: 90rpx;
    /* background-color: #eee; */
}

.user-info-bliock {
    display: inline-block;
    width: calc(33%);
    height: 100%;
    text-align: center;
    font-size: 24rpx;
    font-weight: 400;
    line-height: 35rpx;

}

.user-info-num {
    line-height: 50rpx;
    font-size: 35rpx;
    font-weight: 500;
    color: rgb(126, 154, 233);
}

.info-block-a {
    margin: auto;
    position: relative;
    width: 90%;
    top: 50rpx;
}


.info-block>view:nth-child(n) {
    /* box-shadow: 0 0 10rpx #eee; */
    /* font-size: 30rpx; */
    letter-spacing: 1rpx;
    vertical-align: middle;
    line-height: 100rpx;
    height: 100rpx;
}

.info-block image {
    position: relative;
    top: 16rpx;
    margin: 0 10rpx 0 18rpx;
    border: none;
    padding: 0px;
    height: 50rpx;
}

.recall {
    font-size: 20rpx;
    font-weight: 400;
    background: #fff;
}