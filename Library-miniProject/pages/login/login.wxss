.avatar-wrapper {
    width: 160rpx;
    height: 160rpx;
    padding: 0;
    margin: 0;
    margin-top: 160rpx;
    background-color: #fff;

}

.avatar {
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
}
.nick-name-block{

    margin-top: 40rpx;
    border-top: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
    line-height: 80rpx;
    height: 80rpx;
}
.nick-pre{
    width: 15%;
    text-align: right;
}

.weui-input {
    display: inline-block;
    position: relative;
    top: 10rpx;
    text-align: center;
    width: 70%;

}

.load-submit{
    margin-top: 40rpx;
}