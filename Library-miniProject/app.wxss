/**app.wxss**/
page {
    height: 100%;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 0;
    box-sizing: border-box;
}
.block{
    width: 99%;
    border-radius: 16rpx;
    background-color: #eee;
    height: 100rpx;

}

.line-item {
    margin: auto;
    height: 86rpx;
    width: calc(100% - 40rpx);
    line-height: 86rpx;
    border-bottom: 1rpx solid #f2f2f2;
    font-size: 30rpx;
}

.items>.line-item:last-child {
    border-bottom: none
}

.card {
    margin: auto;
    position: relative;
    width: 100%;
    /* min-height: 20rpx; */
    border-radius: 16rpx;
    box-shadow: 0 0 20rpx #e2e2e2;
    background-color: #fff;
}

.card-item {
    display: block;
    margin: auto;
    width: 90%;
    height: 60rpx;
    line-height: 60rpx;
}


/* 图表格 */
.chart {
    display: block;
    position: relative;
    margin: auto;
    width: 750rpx;
    height: 600rpx;
}

ec-canvas {
    width: 100%;
    height: 100%;
}

/* 按钮 */
.button {
    position: relative;
    display: block;
    margin: auto;
    width: 80%;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 30rpx;
    text-align: center;
    border-radius: 16rpx;
    color: #333;
    background-color: rgba(206, 204, 204, 0.3);
}