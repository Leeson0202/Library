<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cool.leeson.library.dao.UserLearnedDao">

    <resultMap type="cool.leeson.library.entity.UserLearned" id="UserLearnedMap">
        <result property="userId" column="user_id" jdbcType="VARCHAR"/>
        <result property="date" column="date" jdbcType="TIMESTAMP"/>
        <result property="learnTime" column="learn_time" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserLearnedMap">
        select user_id,
               date,
               learn_time
        from user_learned
        where user_id= #{userId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserLearnedMap">
        select
        user_id, date, learn_time
        from user_learned
        <where>
            <if test="userId != null and userId != ''">
                and user_id = #{userId}
            </if>
            <if test="date != null">
                and date = #{date}
            </if>
            <if test="learnTime != null">
                and learn_time = #{learnTime}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from user_learned
        <where>
            <if test="userId != null and userId != ''">
                and user_id = #{userId}
            </if>
            <if test="date != null">
                and date = #{date}
            </if>
            <if test="learnTime != null">
                and learn_time = #{learnTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="" useGeneratedKeys="true">
        insert into user_learned(user_id, date, learn_time)
        values (#{userId}, #{date}, #{learnTime})
    </insert>

    <insert id="insertBatch" keyProperty="" useGeneratedKeys="true">
        insert into user_learned(user_id, date, learn_time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.userId}, #{entity.date}, #{entity.learnTime})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="" useGeneratedKeys="true">
        insert into user_learned(user_id, date, learn_time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.userId}, #{entity.date}, #{entity.learnTime})
        </foreach>
        on duplicate key update
        user_id = values(user_id),
        date = values(date),
        learn_time = values(learn_time)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update user_learned
        <set>
            <if test="userId != null and userId != ''">
                user_id = #{userId},
            </if>
            <if test="date != null">
                date = #{date},
            </if>
            <if test="learnTime != null">
                learn_time = #{learnTime},
            </if>
        </set>
        where = #{}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from user_learned
        where user_id = #{userId}
    </delete>

</mapper>

