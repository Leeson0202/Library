<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cool.leeson.library.dao.UserDao">

    <resultMap type="cool.leeson.library.entity.user.User" id="UserMap">
        <result property="userId" column="user_id" jdbcType="VARCHAR"/>
        <result property="phoneNum" column="phone_num" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="pwd" column="pwd" jdbcType="VARCHAR"/>
        <result property="openId" column="openid" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个 userId-->
    <select id="queryById" resultMap="UserMap">
        select user_id,
               phone_num,
               email,
               pwd,
               openid
        from user
        where user_id = #{userId}
    </select>


    <!--查询单个 openid-->
    <select id="queryByOpenid" resultMap="UserMap">
        select user_id,
               phone_num,
               email,
               pwd,
               openid
        from user
        where openid = #{openid}
    </select>


    <!--查询单个 tel-->
    <select id="queryByTel" resultMap="UserMap">
        select user_id,
               phone_num,
               email,
               pwd,
               openid
        from user
        where phone_num = #{tel}
    </select>


    <!--查询单个 tel-->
    <select id="queryByEmail" resultMap="UserMap">
        select user_id,
               phone_num,
               email,
               pwd,
               openid
        from user
        where email = #{email}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserMap">
        select
        user_id, phone_num, email, pwd, openid
        from user
        <where>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="phoneNum != null and phoneNum != ''">
                and phone_num = #{phoneNum}
            </if>
            <if test="email != null and email != ''">
                and email = #{email}
            </if>
            <if test="pwd != null and pwd != ''">
                and pwd = #{pwd}
            </if>
            <if test="openId != null and openId != ''">
                and openid = #{openId}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from user
        <where>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="phoneNum != null and phoneNum != ''">
                and phone_num = #{phoneNum}
            </if>
            <if test="email != null and email != ''">
                and email = #{email}
            </if>
            <if test="pwd != null and pwd != ''">
                and pwd = #{pwd}
            </if>
            <if test="openId != null and openId != ''">
                and openid = #{openId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="userId" useGeneratedKeys="true">
        insert into user(user_id, phone_num, email, pwd, openid)
        values (#{userId}, #{phoneNum}, #{email}, #{pwd}, #{openId})
    </insert>

    <insert id="insertBatch" keyProperty="userId" useGeneratedKeys="true">
        insert into user(phone_num, email, pwd, openid)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.phoneNum}, #{entity.email}, #{entity.pwd}, #{entity.openId})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="userId" useGeneratedKeys="true">
        insert into user(phone_num, email, pwd, openid)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.phoneNum}, #{entity.email}, #{entity.pwd}, #{entity.openId})
        </foreach>
        on duplicate key update
        phone_num = values(phone_num),
        email = values(email),
        pwd = values(pwd),
        openid = values(openid)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update user
        <set>
            <if test="phoneNum != null and phoneNum != ''">
                phone_num = #{phoneNum},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
            <if test="pwd != null and pwd != ''">
                pwd = #{pwd},
            </if>
            <if test="openId != null and openId != ''">
                openid = #{openId},
            </if>
        </set>
        where user_id = #{userId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from user
        where user_id = #{userId}
    </delete>

</mapper>

