<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cool.leeson.library.dao.UserOnlineDao">

    <resultMap type="cool.leeson.library.entity.user.UserOnline" id="UserOnlineMap">
        <result property="userId" column="user_id" jdbcType="VARCHAR"/>
        <result property="online" column="online" jdbcType="INTEGER"/>
        <result property="date" column="date" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserOnlineMap">
        select user_id,
               online,
               date
        from user_online
        where user_id = #{userId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserOnlineMap">
        select
        user_id, online, date
        from user_online
        <where>
            <if test="userId != null and userId != ''">
                and user_id = #{userId}
            </if>
            <if test="online != null">
                and online = #{online}
            </if>
            <if test="date != null">
                and date = #{date}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from user_online
        <where>
            <if test="userId != null and userId != ''">
                and user_id = #{userId}
            </if>
            <if test="online != null">
                and online = #{online}
            </if>
            <if test="date != null">
                and date = #{date}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="userId" useGeneratedKeys="true">
        insert into user_online(user_id, online, date)
        values (#{userId}, #{online}, #{date})
    </insert>

    <insert id="insertBatch" keyProperty="userId" useGeneratedKeys="true">
        insert into user_online(online, date)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.online}, #{entity.date})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="userId" useGeneratedKeys="true">
        insert into user_online(online, date)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.online}, #{entity.date})
        </foreach>
        on duplicate key update
        online = values(online),
        date = values(date)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update user_online
        <set>
            <if test="online != null">
                online = #{online},
            </if>
            <if test="date != null">
                date = #{date},
            </if>
        </set>
        where user_id = #{userId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from user_online
        where user_id = #{userId}
    </delete>

</mapper>

